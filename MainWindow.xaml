<Window x:Class="AssignmentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssignmentManager"
        mc:Ignorable="d"
        Title="Assignment Manager" Height="450" Width="800" MinWidth="800" MinHeight="450">


    <Grid>

        <!-- Defining the grid rows. -->
        <Grid.RowDefinitions>

            <!-- Header row. -->
            <RowDefinition Height="50"/>

            <!-- Insert/Edit Row. -->
            <RowDefinition Height="80"/>

            <!-- Selecting Sort Type Row. -->
            <RowDefinition Height="100"/>

            <!-- Table results Row. -->
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <!-- Creating borders. -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />
        <Border Grid.Row="4" BorderBrush="Black" BorderThickness="1" />

        
        
        <!-- Header row. -->
        <!-- School Link button. -->
        <Button Name="SchoolButton"
            Grid.Row="0"
            Width="100"
            Height="30"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="10, 0, 0, 0" 
            
            Click="SchoolButton_Click"
                
            
            >
            eConestoga
        </Button>



        <!-- Insert/Edit Row. -->
        <!-- Class name input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="7, -35, 0, 0"
            >
            *Class:
        </Label>
        <TextBox Name="ClassTextBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="10, 0, 0, 0"
            
            Width="50"
            >
            ABC
        </TextBox>

        <!-- Assignment name input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="67, -35, 0, 0"
            >
            *Assignment:
        </Label>
        <TextBox Name="AssignmentTextBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="70, 0, 0, 0"
            
            Width="80"
            >
            A-01
        </TextBox>

        <!-- Weight input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="157, -35, 0, 0"
            >
            *Weight:
        </Label>
        <TextBox Name="WeightTextBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="160, 0, 0, 0"
            
            Width="50"
            >
            10.01
        </TextBox>
        
        <!-- Assignment name input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="217, -35, 0, 0"
            >
            *Due Date:
        </Label>
        <TextBox Name="DueDateTextBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="220, 0, 0, 0"
            
            Width="115"
            >
            2023-12-16 11:00:00
        </TextBox>

        <!-- Assignment status input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="347, -35, 0, 0"
            >
            *Status:
        </Label>
        <ComboBox Name="StatusComboBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Width="100"
            
            Margin="350, 0, 0, 0"
            >
        </ComboBox>

        <!-- Local resources input section. -->
        <Label
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Margin="460, -35, 0, 0"
            >
            Local Resources:
        </Label>
        <ComboBox Name="LocalResourcesComboBox"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
            Width="100"
            
            Margin="465, 0, 0, 0"
            >
        </ComboBox>
        <Button Name="LocalResourcesAddButton"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
          
            Width="50"
            Height="20"
            
            Margin="570, -25, 0, 0"
            
            Click="LocalResourcesAddButton_Click"
            >
            Add
        </Button>
        <Button Name="LocalResourcesRemoveButton"
            Grid.Row="1"
            
            HorizontalAlignment="Left"
            VerticalAlignment="Center" 
          
            Width="50"
            Height="20"
            
            Margin="570, 15, 0, 0" 
            
            Click="LocalResourcesRemoveButton_Click"
            >
            Remove
        </Button>

        <!-- Selecting Sort Type Row. -->
        


        
        
        
        <!-- Table results Row. -->
        <!-- Table to hold results. -->
        <DataGrid Name="TableGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            
            HorizontalScrollBarVisibility="Visible"
            VerticalScrollBarVisibility="Visible"
            Grid.Row="3"
            >
        </DataGrid>


    </Grid>
</Window>
